{
  "name": "coffee-recipe-api",
  "version": "0.1.0",
  "bin": {
    "coffee-recipe-api": "bin/coffee-recipe-api.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "schema": "graphql-schema-utilities",
    "generate:schema": "graphql-schema-utilities -s './lib/api/schemas/**/*.gql' -o './lib/api/schema.graphql'",
    "deploy": "yarn generate:schema && yarn cdk deploy"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.117.0",
    "@types/jest": "^26.0.10",
    "@types/node": "10.17.27",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "aws-cdk": "1.117.0",
    "graphql-schema-utilities": "^1.1.3",
    "jest": "^26.4.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "@aws-cdk/aws-appsync": "1.117.0",
    "@aws-cdk/aws-dynamodb": "1.117.0",
    "@aws-cdk/core": "1.117.0",
    "source-map-support": "^0.5.16"
  }
}